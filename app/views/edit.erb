<div class="container">
  <form action='/posts/<%= @post.id %>/edit' method='post'>
  	<input type="hidden" name="_method" value="put">
  	<h3>Edit Post</h3>
  	Title:<br>
  	<input type='text' name='title' value='<%= @post.title %>'><br>
  	Content:<br>
  	<textarea name='description'><%= @post.description %></textarea>
  	<input type='submit'>
  </form>
</div>
